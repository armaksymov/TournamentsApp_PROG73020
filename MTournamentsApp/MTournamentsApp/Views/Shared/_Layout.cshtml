<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MTournamentsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MTournamentsApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid align-items-center justify-content-center">
                <div class="row mx-auto align-items-center justify-content-center">
                    <a class="col-12 mx-auto text-center" asp-controller="Home" asp-action="Index"><img src="~/lib/images/condors_logo_MTournamentZ.png" alt="Conestoga Condors Logo" style="width:12rem"></a>
                    @* <a class="navbar-brand col-12 mx-0 mt-0 text-center" asp-area="" asp-controller="Home" asp-action="Index"><span style="color:#d4af37">M</span>TournamentZ</a> *@

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-muted" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-muted" asp-area="" asp-controller="Tournaments" asp-action="List">Tournaments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-muted" asp-area="" asp-controller="Teams" asp-action="List">Teams</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-muted" asp-area="" asp-controller="Members" asp-action="List">Members</a>
                            </li>
                        </ul>

                        <!-- place login/register/logout controls here -->
                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<User> _signInManager

                        <ul class="navbar-nav">
                            @if (_signInManager.IsSignedIn(User))
                            {
                                <!-- Display logged in user name -->
                                <li class="nav-item">
                                    <form class="form-inline" asp-controller="Account" asp-action="LogOut" method="post">
                                        <input type="submit" class="nav-link text-muted btn btn-link text-dark" style="font-weight: bold;" value="Logout @User.Identity.Name" />
                                    </form>
                                </li>
                            }
                            else
                            {
                                <!-- Register link -->
                                <li class="nav-item">
                                    <a class="nav-link text-muted text-dark" style="font-weight: bold;" asp-controller="Account" asp-action="Register">Register</a>
                                </li>
                                <!-- Log In link -->
                                <li class="nav-item">
                                    <a class="nav-link text-muted text-dark" style="font-weight: bold;" asp-controller="Account" asp-action="LogIn">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-break">
            &copy; 2024 - MTournamentsApp - v.1.0.0 - MTournamentZ (MTZ) Group 3 Milestone 2
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
